pipeline {
    agent 
    {
        node {
            label 't054-runner'
        }

        stage('Checkout') {
            steps {
                git 'https://git.cloudavise.com/visops/t054/sample-java-app.git'
            }
        }

        stage('Run Ansible') {
            environment {
                TOMCAT_VERSION = '9.0.75'
                TOMCAT_INSTALL_DIR = '/opt/tomcat'
            }

            steps {
                sh 'ansible-playbook -i inventory deploy-on-tomcat.yml'
            }
        }
    }
}
