pipeline {
    agent {
        node {
            label 't054-runner'
        }
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://git.cloudavise.com/visops/t054/sample-java-app.git'
            }
        }

        stage('Run Ansible') {
            steps {
                sh 'ansible-playbook -i inventory deploy-on-tomcat.yml'
            }
        }
    }
}
