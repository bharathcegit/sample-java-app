pipeline {
    agent {
        node {
            label 't054-runner'
        }
    }

    stages {
        stage('checkout') 
        {
            steps 
            {
                git credentialsId: 'ca-git-access', branch: 'deploy-on-tomcat', url: "https://git.cloudavise.com/visops/t054/sample-java-app.git"
            }
        }

        stage('Create Application Build') 
        {
         steps {
            sh '''cd /opt/jenkins/workspace/VisOps/t054/sample-java-app/deploy-on-tomcat/calculator-app
               mvn install clean package'''
         }
      }

        stage('Run Ansible') 
        {
            steps 
            {
                sh 'ansible-playbook -i inventory install-tomcat.yml'
                sh 'ansible-playbook -i inventory deploy-on-tomcat.yml'
            }
        }
    }
}
